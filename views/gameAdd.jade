doctype html
html
	head
		include ./head.jade
	body
		include ./navbar.jade
		script(type="text/javascript").
			$("#allTeam").removeClass("active");
			$("#allGame").addClass("active");
		div.container.text-center
			div.row
				div.col-xs-2
					ul.nav.nav-pills.nav-stacked.text-center
						li
							a.row(href="/games/gameList")
								p.navbar-font 赛事列表
						div.line
						li.active
							a.row(href="/games/gameAdd")
								p.navbar-font 添加赛事
				div.col-xs-10
					div.panel.panel-primary.panel-block
						div.panel-heading
							div.panel-title.title
								p 添加赛事
						div.panel-body
							form.form-horizontal(role='form',method="POST",action="/games/add",enctype="multipart/form-data")
								div.form-group
									label.col-xs-3.control-label(for='name') 赛事名称
									div.col-xs-5
										input.form-control#name(type='text',name='name')
								hr
								div.form-group
									label.col-xs-3.control-label(for='college') 学院
									div.col-xs-5
										input.form-control#coolege(type='text',name='college')
								hr
								div.form-group
									label.col-xs-3.control-label(for='stage') 当前类型
									div.col-xs-5
										input.form-control#stage(type='text',name='stage')
								hr
								div.form-group
									label.col-xs-3.control-label(for='coverUrl') 赛事logo
									div.col-xs-5
										input.form-control#coverUrl(type='file',accept='image/png,image/jpeg,image/jpg',name='coverUrl')
								hr
								div.form-group
									div.text-center
										button.btn.btn-primary(type='submit') 确定