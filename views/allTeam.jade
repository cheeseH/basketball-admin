doctype html
html
	head
		include ./head.jade
	body
		div.modal.fade#myModal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
			div.modal-dialog
				div.modal-content
					div.modal-header
						button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
						h4.modal-title#myModalLabel 编辑
					div.modal-body
						form.form-horizontal(role='form',method="POST",action="",enctype="multipart/form-data")
							div.form-group
								label.col-xs-3.control-label(for='team-name') 队名
								div.col-xs-5
									input.form-control#team-name(type='text')
							div.form-group
								label.col-xs-3.control-label(for='team-description') 简介
								div.col-xs-7
									textarea.form-control#team-description(rows="5")
							div.form-group
								div.col-xs-5.col-xs-offset-3
									input.form-control#game-img(type='file',accept='image/png,image/jpeg,image/jpg')
					div.modal-footer
						button.btn.btn-defautl(type="button",data-dismiss="modal") 关闭
						button.btn.btn-default(type="button") 完成
		include ./navbar.jade
		div.container.text-center
			div.row
				div.col-xs-2
					ul.nav.nav-pills.nav-stacked.text-center
						li.active
							a.row(href="/team")
								p.navbar-font 球队列表
						div.line
						li
							a.row(href="/newTeamAdd")
								p.navbar-font 添加新球队
				div.col-xs-10.text-center
					div.panel.panel-primary.panel-block
						div.panel-heading
							div.panel-title.title
								p 球队列表
						div.panel-body
							table.table.table-hover.table-responsive.table-bordered.horizontal-center
								thead
									tr
										th.text-center 序号
										th.text-center 队名
										th.text-center 队标
										th.text-center 简介
										th.text-center 操作
								tbody
									-each val,key in teamList
									tr
										td.text-center
											p #{key+1}
										td.text-center
											p #{val.get("name")}
										td.text-center
											img.team-img(src=val.get("logoUrl"))
										td.text-center.col-xs-3
											p #{val.get("info")}
										td.text-center
											div.dropdown
												button.btn.btn-info.dropdown-toggle#operation(data-toggle='dropdown') 操作
													span.caret
												ul.dropdown-menu(role="menu",aria-labelledby="operation")
													li.alert-info(role="presentation")
														a(role="menuitem",tabindex="-1",href="#") 编辑
													div.line
													li.alert-danger(role="presentation")
														a(role="menuitem",tabindex="-1",href="#") 删除