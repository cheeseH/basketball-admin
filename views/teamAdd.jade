doctype html
html
	head
		include ./head.jade
	body
		include ./navbar.jade
		div.container.text-center
			div.row
				div.col-xs-2
					include ./game-navbar-horizontal
				div.col-xs-10
					div.game-border.text-center
						h2 添加队伍
						hr
						form.form-horizontal(role='form',method="POST",action="",enctype="multipart/form-data")
							div.form-group
								label.col-xs-3.control-label(for='team-name') 队名
								div.col-xs-5
									input.form-control#team-name(type='text')
							hr
							div.form-group
								label.col-xs-3.control-label(for='team-description') 简介
								div.col-xs-5
									textarea.form-control#team-description(rows="7")
							hr
							div.form-group
								div.col-xs-5.col-xs-offset-3
									input.form-control#game-img(type='file',accept='image/png,image/jpeg,image/jpg')
							hr
							div.form-group
								div.text-center
									button.btn.btn-primary(type='submit') 确定