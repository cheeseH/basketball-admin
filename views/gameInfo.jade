doctype html
html
	head
		include ./head.jade
	body
		include ./navbar.jade
		div.container.text-center
			div.row
				div.col-xs-2
					ul.nav.nav-pills.nav-stacked.text-center
						li.active
							a.row(href="/games/gameDetail?gameId=#{gameId}")
								p.navbar-font 赛事信息
						div.line
						li
							a.row(href="/team")
								p.navbar-font 赛事球队
						div.line
						li
							a.row(href="/competitions/competitionList?gameId=#{gameId}")
								p.navbar-font 赛事进程
				div.col-xs-10
					div.panel.panel-primary.panel-block
						div.panel-heading
							div.title
								p 赛事信息
						div.panel-body
							img.coverUrl(src="#{gameInfo.get('coverUrl')}")
							hr
							table.table.table-hover.table-responsive.table-bordered
								thead
									tr
										th.text-center 名称
										th.text-center 是否结束
										th.text-center 学院
										th.text-center 奖金
										th.text-center 奖金上限
										th.text-center 关注人数
										th.text-center 浏览量
								tbody
									tr
										td.text-center #{gameInfo.get("name")}
										-if(gameInfo.get("isFinish"))
											td.text-center 是
										-else
											td.text-center 否
										td.text-center #{gameInfo.get("college")}
										td.text-center #{gameInfo.get("award")}
										td.text-center #{gameInfo.get("awardLimit")}
										td.text-center #{gameInfo.get("follows")}
										td.text-center #{gameInfo.get("views")}