		div.modal.fade#myModal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
			div.modal-dialog
				div.modal-content
					div.modal-header
						button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
						h4.modal-title#myModalLabel
					div.modal-body
						form.form-horizontal(role='form',method="POST",action="",enctype="multipart/form-data")
							div.form-group
								label.col-xs-3.control-label(for='teamA') 球队A
								div.col-xs-5
									input.form-control#teamA(type='text')
							div.form-group
								label.col-xs-3.control-label(for='teamB') 球队B
								div.col-xs-5
									input.form-control#teamB(type='text')
							div.col-xs-8.col-xs-offset-2
								label.checkbox-inline
									input(type='radio',value='0',name='type')
									未开始
								label.checkbox-inline
									input(type='radio',value='1',name='type')
									进行中
								label.checkbox-inline
									input(type='radio',value='2',name='type')
									已结束
							div.form-group
								label.col-xs-3.control-label(for='awardLimit') 奖金池上限
								div.col-xs-5
									input.form-control#awardLimit(type='text')
							div.form-group
								label.col-xs-3.control-label(for='awardMinimum') 奖金池下限
								div.col-xs-5
									input.form-control#awardMinimum(type='text')
					div.modal-footer
						button.btn.btn-defautl(type="button",data-dismiss="modal") 关闭
						button.btn.btn-default(type="button") 完成
