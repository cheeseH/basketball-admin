doctype html
html
	head
		include ./head.jade
		script(type="text/javascript").
			function addCompetition(){
				$("#myModal").modal();
			}
			function intoLevelAdd(){
				location.href="/levelAdd";
			}

	body
		div.modal.fade#myModal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
			div.modal-dialog
				div.modal-content
					div.modal-header
						button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
						h4.modal-title#myModalLabel
					div.modal-body
						form.form-horizontal(role='form',method="POST",action="",enctype="multipart/form-data")
							div.form-group
								label.col-xs-3.control-label(for='teamA') 球队A
								div.col-xs-5
									input.form-control#teamA(type='text')
							div.form-group
								label.col-xs-3.control-label(for='teamB') 球队B
								div.col-xs-5
									input.form-control#teamB(type='text')
							div.col-xs-8.col-xs-offset-2
								label.checkbox-inline
									input(type='radio',value='0',name='type')
									未开始
								label.checkbox-inline
									input(type='radio',value='1',name='type')
									进行中
								label.checkbox-inline
									input(type='radio',value='2',name='type')
									已结束
							div.form-group
								label.col-xs-3.control-label(for='awardLimit') 奖金池上限
								div.col-xs-5
									input.form-control#awardLimit(type='text')
							div.form-group
								label.col-xs-3.control-label(for='awardMinimum') 奖金池下限
								div.col-xs-5
									input.form-control#awardMinimum(type='text')
					div.modal-footer
						button.btn.btn-defautl(type="button",data-dismiss="modal") 关闭
						button.btn.btn-default(type="button") 完成
		include ./navbar.jade
		div.container.text-center
			div.row
				div.col-xs-2
					ul.nav.nav-pills.nav-stacked.text-center
						li.active
							a.row(href="/gameProcess")
								p.navbar-font 赛事进程
						div.line
						li
							a.row(href="/levelAdd")
								p.navbar-font 添加下一阶段
				div.col-xs-10
					div.panel.panel-primary.panel-block
						div.panel-heading
							div.panel-title.title
								p 比赛进程
						div.panel-body
							-console.log(competitionList)
							-each val,key in competitionList
								div.panel.panel-success.col-xs-10.col-xs-offset-1
									-each val1,key1 in val
										div.col-sm-6
											div.panel.panel-primary.block
												div.panel-heading
													p.panel-title.title #{val1.type}
												table.table.table-hover
													tr
														th.text-center 队伍A
														th.text-center 队伍B
														th.text-center 操作
													-each val2,key2 in val1
														tr
															td.text-center #{val2.get("teamA")}
															td.text-center #{val2.get("teamB")}
															td.text-center
																div.dropdown
																	button.btn.btn-info.dropdown-toggle#operation(data-toggle='dropdown') 操作
																		span.caret
																	ul.dropdown-menu(role="menu",aria-labelledby="operation")
																		li.alert-info(role="presentation")
																			a(role="menuitem",tabindex="-1",href="/competitionInfo") 管理比赛
																		div.line
																		li.alert-danger(role="presentation")
																			a(role="menuitem",tabindex="-1",href="#") 删除
													tr
														td.text-center(colspan='3')
															a(href="#") 添加比赛
									div.col-sm-6
										div.block.empty
											p +
								hr