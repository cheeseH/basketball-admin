doctype html
html
	head
		include ./head.jade
		script(type="text/javascript").
			function toDisable(t){
				$(t).addClass("disabled");
			}
	body
		include ./navbar.jade
		div.container.text-center
			div.row
				div.col-xs-2
					ul.nav.nav-pills.nav-stacked
						li
							a.row(href="/teams?pos=game&gameId=#{gameId}")
								p.navbar-font 球队列表
						div.line
						li.active
							a.row(href="/teams/newTeamAdd?gameId=#{gameId}")
								p.navbar-font 添加新球队
						div.line
						li
							a.row(href="/teams/select?gameId=#{gameId}")
								p.navbar-font 添加已有球队
						div.line
						li
							a.row(href="/games/gameDetail?gameId=#{gameId}")
								p.navbar-font 返回
				div.col-xs-10
					div.panel.panel-primary.panel-block
						div.panel-heading
							div.panel-title.title
								p 添加新球队
						div.panel-body
							form.form-horizontal(role='form',method="POST",action="/teams/add?pos=game",enctype="multipart/form-data")
								div.form-group
									label.col-xs-3.control-label(for='name') 队名
									div.col-xs-5
										input.form-control#name(type='text',name='name')
								hr
								div.form-group
									label.col-xs-3.control-label(for='info') 简介
									div.col-xs-5
										textarea.form-control#info(rows="5",name='info')
								input.form-control.hidden#gameId(type="text",name='gameId',value="#{gameId}")
								hr
								div.form-group
									label.col-xs-3.control-label(for="logoUrl") 球队logo
									div.col-xs-4
										input.form-control#logoUrl(type='file',accept='image/png,image/jpeg,image/jpg',name='logoUrl')
								hr
								div.form-group
									div.text-center
										button.btn.btn-primary(type='submit',onclick="toDisable(this)") 确定